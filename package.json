{
  "name": "equitify-platform",
  "version": "0.0.1",
  "description": "Equitify Platform monorepo",
  "private": "true",
  "workspaces": ["contracts", "integration-tests"],
  "scripts": {
    "deploy": "cd contracts && yarn deploy",
    "build": "yarn build:ft",
    "build:launchpad": "near-sdk-js build ./contracts/src/launchpad.ts build/launchpad.wasm",
    "build:launchpad-factory": "near-sdk-js build ./contracts/src/LaunchpadFactory.ts build/launchpad_factory.wasm",
    "build:nft": "near-sdk-js build ./contracts/src/NEPs/nft-contract/index.ts build/nft.wasm",
    "build:ft": "near-sdk-js build ./contracts/src/NEPs/ft-contract/index.ts build/ft.wasm",

    "test": "yarn test:integration",
    "test:integration": "yarn build && cd integration-tests && yarn test"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RedDuck-Software/equitify-platform.git"
  },
  "author": "RedDuck Software <sales@redduck.io>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/RedDuck-Software/equitify-platform/issues"
  },
  "devDependencies": {
    "near-cli": "^3.3.0",
    "near-sdk-js": "0.6.0"
  },
  "homepage": "https://github.com/RedDuck-Software/equitify-platform#readme"
}
